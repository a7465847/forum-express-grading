<h1>TOP10 人氣餐廳</h1>
<hr />
<div class="row d-flex justify-content-center">
  {{#each restaurant}}
  <div class="col-md-8 ">
    <div class="card mb-4 shadow-sm p-2">
      <div class="row">
        <div class="col-md-2">
          <img class="card-img-top" src="{{this.image}}" alt="Card image cap" style="width: 100px; height: 100px;">
        </div>
        <div class="col-md-10">
          <div class="d-flex justify-content-between">
            <h4>{{this.name}}</h2>
            {{#if this.isFavorited }}
            <form action="/favorite/{{this.id}}?_method=DELETE" method="POST"><button type="submit"
                class="btn btn-danger mr-3">移除最愛</button></form>
            {{else}}
            <form action="/favorite/{{this.id}}" method="POST"><button type="submit"
                class="mr-3 btn btn-primary">加到最愛</button>
            </form>
            {{/if}}
          </div>
          <p class="card-text">
            {{!-- <a href="/restaurants/{{this.id}}">
              {{this.name}}
            </a> --}}
            </p>
            <span class="badge badge-secondary">收藏數：{{this.FavoritedCount}}</span>
            <span class="badge badge-secondary">{{this.categoryName}}</span>
            <p class="card-text">{{this.description}}</p>
        </div>

      </div>
    </div>
  </div>
  {{/each}}
</div>